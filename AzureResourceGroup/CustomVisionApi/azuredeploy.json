{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "CustomVisionApiName": {
      "type": "string",
      "metadata": {
        "description": "Custom Vision API name"
      }
    },
    "CustomVisionApiTrainingSku": {
      "type": "string",
      "allowedValues": [
        "S0",
        "F0"
      ],
      "metadata": {
        "description": "Custom Vision API pricing tier"
      }
    }
  },
  "variables": {
    "trainingApiName": "[concat(parameters('CustomVisionApiName'), 'Training')]",
    "predictionApiName": "[concat(parameters('CustomVisionApiName'), 'Prediction')]"
  },
  "resources": [
    {
      "apiVersion": "2016-02-01-preview",
      "type": "Microsoft.CognitiveServices/accounts",
      "kind": "CustomVision.Training",
      "name": "[variables('trainingApiName')]",
      "sku": {
        "name": "[parameters('CustomVisionApiTrainingSku')]"
      },
      "location": "[resourceGroup().location]",
      "scale": null,
      "properties": {}
    },
    {
      "apiVersion": "2016-02-01-preview",
      "type": "Microsoft.CognitiveServices/accounts",
      "kind": "CustomVision.Prediction",
      "name": "[variables('predictionApiName')]",
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('trainingApiName'))]"
      ],
      "sku": {
        "name": "[parameters('CustomVisionApiTrainingSku')]"
      },
      "location": "[resourceGroup().location]",
      "scale": null,
      "properties": {}
    }
  ],
  "outputs": {
    "TrainingApiKey": {
      "type": "securestring",
      "value": "[listKeys(resourceId('Microsoft.CognitiveServices/accounts', variables('trainingApiName')), '2015-04-08').Key1]"
    },
    "PredictionApiKey": {
      "type": "securestring",
      "value": "[listKeys(resourceId('Microsoft.CognitiveServices/accounts', variables('predictionApiName')), '2015-04-08').Key1]"
    }
  }
}
